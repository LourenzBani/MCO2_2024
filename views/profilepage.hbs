<div class="container">
    <div class="left-panel">
        <img src="https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_960_720.png " id="profile-icon"/>
        <h4 id="account-name"> {{user.name}} </h4>
        <p id="account-type"> {{user.acctype}} </p>
        <a href="/profile_edit"><button type="button" id="edit-btn">Edit Personal Details</button></a>
        <a href="/main"><button type="button" id="back-btn">Back to Home</button></a>
    </div>
    <div class="right-panel">
        <div class="info">
            <h3 class="title-info">Information</h3>
            <div class="info-data">
                <div class="data">
                    <h4>Name</h4>
                    <p id="account-name">{{user.name}}</p>
                    <h4>Email</h4>
                    <p id="account-email">{{user.email}}</p>
                </div>
                <div class="data">
                    <h4>Phone Number</h4>
                    <p id="account-number">{{user.phone}}</p>
                    <h4>Department</h4>
                    <p id="account-department">{{user.department}}</p>
                    <h4>Campus</h4>
                    <p id="account-address">{{user.address}}</p>
                    <h4>Birthdate</h4>
                    <p id="account-birthdate">{{user.birthdate}}</p>
                </div>
            </div>
        </div>
        <div class="reservations">
            <h3 class="title-info">Reservations Data</h3>
            <div class="reservation-data">
                <div class="data">
                    <h4>Reserved Seat</h4>
                    <p id="reserved-seat">{{seat.seat_number}}</p>
                    <h4>Reserved Lab</h4>
                    <p id="reserved-lab">lab</p>
                </div>
                <div class="data">
                    <h4>Reserved day</h4>
                    <p id="reserved-date">{{seat.day_reserved}}</p>
                    <h4>Reserved Time</h4>
                    <p id="reserved-time">{{seat.time_slot_from}} - {{seat.time_slot_to}}</p>
                </div>
            </div>
        </div>
        <div class="social-media">
            <ul>
            <li><a href="#"><i class="fab fa-facebook-f"></i></a></li>
            <li><a href="#"><i class="fa-brands fa-x-twitter"></i></a></li>
            <li><a href="#"><i class="fab fa-instagram"></i></a></li>
            </ul>
        </div>
    </div>
</div>
